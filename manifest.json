{
  "manifest_version": 2,
  "name": "Fast theme toggle",
  "description": "Google Chrome Extension enable to quickly switch the website theme.",
  "version": "1.0.1",
  "background": {
    "scripts": ["src/scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*", "file:///*/*"],
      "run_at": "document_start",
      "css": ["src/styles/theme.css"],
      "js": ["src/scripts/content.js"]
    },
    {
      "matches": ["https://*/*", "http://*/*", "file:///*/*"],
      "run_at": "document_idle",
      "js": ["src/scripts/idle.js"]
    }
  ],
  "web_accessible_resources": ["src/scripts/helper.js"],
  "browser_action": {
    "default_title": "Fast theme toggle"
  },
  "permissions": ["contextMenus"],
  "icons": {
    "16": "src/images/icon16.png",
    "48": "src/images/icon48.png",
    "128": "src/images/icon128.png"
  }
}
